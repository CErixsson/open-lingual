    {
      "phase": 1, "type": "build", "title": "المفردات والقواعد",
      "blocks": [
        { "id": "vocab-01", "type": "vocabulary", "items": [
          { "term": "اسمي…", "translation": "My name is…", "example": "اسمي أحمد." },
          { "term": "أنا من…", "translation": "I am from…", "example": "أنا من مصر." },
          { "term": "عمري … سنة", "translation": "I am … years old", "example": "عمري ٢٥ سنة." },
          { "term": "أحب…", "translation": "I like…", "example": "أحب كرة القدم." }
        ]},
        { "id": "grammar-01", "type": "text", "content": "**Arabic reads right to left.**\n\n**Key structures:**\n- اسمي + name\n- أنا من + country\n- عمري + number + سنة/سنوات\n- أحب + noun" }
      ]
    },
    {
      "phase": 2, "type": "controlled_practice", "title": "تمارين",
      "blocks": [
        { "id": "ex-01", "type": "multiple_choice", "prompt": "How do you say 'I am from Egypt' in Arabic?", "items": [
          { "text": "أنا من مصر.", "correct": true },
          { "text": "مصر أنا من.", "correct": false },
          { "text": "من أنا مصر.", "correct": false }
        ]}
      ]
    },
    {
      "phase": 3, "type": "guided_production", "title": "إنتاج موجّه",
      "blocks": [
        { "id": "guided-01", "type": "open_response", "prompt": "Write 3 sentences about yourself in Arabic.", "hints": ["Use 'اسمي…'", "Use 'أحب…'"], "required_grammar": ["اسمي", "أنا من"], "min_words": 8 }
      ]
    },
    {
      "phase": 4, "type": "free_performance", "title": "مهمة حرة",
      "blocks": [
        { "id": "perf-01", "type": "open_response", "prompt": "Write a self-introduction in Arabic for a new Arabic-speaking friend.", "hints": [], "required_grammar": [], "min_words": 15, "evaluation_criteria": { "grammar_weight": 0.3, "vocabulary_weight": 0.3, "structure_weight": 0.2, "fluency_weight": 0.2 } }
      ]
    }
