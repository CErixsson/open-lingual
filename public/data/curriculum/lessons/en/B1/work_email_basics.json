      "phase": 1, "type": "build", "title": "Key Vocabulary & Grammar",
      "blocks": [
        { "id": "vocab-01", "type": "vocabulary", "items": [
          { "term": "Dear…", "translation": "Formal greeting", "example": "Dear Mr. Johnson," },
          { "term": "I am writing to…", "translation": "Purpose statement", "example": "I am writing to inquire about…" },
          { "term": "Kind regards", "translation": "Formal sign-off", "example": "Kind regards, Anna" },
          { "term": "Please find attached", "translation": "Mentioning attachments", "example": "Please find attached the report." }
        ]},
        { "id": "grammar-01", "type": "text", "content": "**Email structure:**\n1. **Greeting:** Dear + name / Hi + name\n2. **Purpose:** I am writing to + verb\n3. **Body:** Details and requests\n4. **Closing:** Kind regards / Best wishes\n\n**Formal language:**\n- *Could you please…* (not 'Can you…')\n- *I would appreciate…* (not 'I want…')\n- *I look forward to hearing from you*" }
      ]
    },
    {
      "phase": 2, "type": "controlled_practice", "title": "Controlled Practice",
      "blocks": [
        { "id": "ex-01", "type": "word_order", "prompt": "Arrange: writing / I / to / am / about / inquire / the / meeting", "items": [
          { "answer": "I am writing to inquire about the meeting" }
        ]},
        { "id": "ex-02", "type": "multiple_choice", "prompt": "Which closing is most professional?", "items": [
          { "text": "Kind regards,", "correct": true },
          { "text": "Later!", "correct": false },
          { "text": "Bye bye", "correct": false }
        ]}
      ]
    },
