{
  "id": "en-a1-introductions",
  "title": "English: About Me",
  "description": "Talk about yourself — age, country, and likes.",
  "language": "en",
  "level": "A1",
  "tags": ["introductions", "personal", "basics"],
  "objectives": ["Say where you are from", "Talk about age", "Express likes"],
  "descriptor_ids": [1151, 1152],
  "phases": [
    {
      "phase": 1, "type": "build", "title": "Key Vocabulary & Grammar",
      "blocks": [
        { "id": "vocab-01", "type": "vocabulary", "items": [
          { "term": "I am from…", "translation": "Origin", "example": "I am from Sweden." },
          { "term": "I am … years old", "translation": "Age", "example": "I am 25 years old." },
          { "term": "I like…", "translation": "Preference", "example": "I like football." },
          { "term": "I live in…", "translation": "Residence", "example": "I live in Stockholm." }
        ]},
        { "id": "grammar-01", "type": "text", "content": "**Verb 'to be':**\n- I **am**, You **are**, He/She **is**\n\n**Talking about yourself:**\n- *I am from* + country\n- *I am* + age + *years old*\n- *I like* + noun/verb-ing" }
      ]
    },
    {
      "phase": 2, "type": "controlled_practice", "title": "Controlled Practice",
      "blocks": [
        { "id": "ex-01", "type": "cloze", "prompt": "I _____ from Japan. I _____ 20 years old.", "items": [
          { "answer": "am", "alternatives": [] },
          { "answer": "am", "alternatives": [] }
        ]},
        { "id": "ex-02", "type": "multiple_choice", "prompt": "Which sentence is correct?", "items": [
          { "text": "I am from Brazil.", "correct": true },
          { "text": "I from am Brazil.", "correct": false },
          { "text": "From I am Brazil.", "correct": false }
        ]}
      ]
    },
    {
      "phase": 3, "type": "guided_production", "title": "Guided Production",
      "blocks": [
        { "id": "guided-01", "type": "open_response", "prompt": "Write 3 sentences about yourself: where you are from, how old you are, and one thing you like.", "hints": ["Use 'I am from…'", "Use 'I like…'"], "required_grammar": ["I am"], "min_words": 10 }
      ]
    },
    {
      "phase": 4, "type": "free_performance", "title": "Free Performance Task",
      "blocks": [
        { "id": "perf-01", "type": "open_response", "prompt": "Write a short paragraph introducing yourself to a new pen pal. Include your name, age, where you live, and what you enjoy doing.", "hints": [], "required_grammar": [], "min_words": 20, "evaluation_criteria": { "grammar_weight": 0.3, "vocabulary_weight": 0.3, "structure_weight": 0.2, "fluency_weight": 0.2 } }
      ]
    }
  ],
