      "blocks": [
        { "id": "vocab-01", "type": "vocabulary", "items": [
          { "term": "What time is it?", "translation": "Asking for the time", "example": "Excuse me, what time is it?" },
          { "term": "It is … o'clock", "translation": "Telling time", "example": "It is three o'clock." },
          { "term": "half past", "translation": "30 minutes past", "example": "It is half past two." },
          { "term": "quarter to/past", "translation": "15 minutes", "example": "It is quarter past nine." }
        ]},
        { "id": "grammar-01", "type": "text", "content": "**Numbers 1-20:** one, two, three, four, five, six, seven, eight, nine, ten, eleven, twelve, thirteen…twenty\n\n**Tens:** twenty, thirty, forty, fifty, sixty, seventy, eighty, ninety, one hundred\n\n**Telling time:**\n- *It is* + number + *o'clock*\n- *It is half past* + number\n- *It is quarter past/to* + number" }
      ]
    },
    {
      "phase": 2, "type": "controlled_practice", "title": "Controlled Practice",
      "blocks": [
        { "id": "ex-01", "type": "multiple_choice", "prompt": "What is 'half past seven'?", "items": [
