  "phases": [
    {
      "phase": 1, "type": "build", "title": "Key Vocabulary & Grammar",
      "blocks": [
        { "id": "vocab-01", "type": "vocabulary", "items": [
          { "term": "How much is this?", "translation": "Asking price", "example": "How much is this shirt?" },
          { "term": "I would like…", "translation": "Polite request", "example": "I would like two apples, please." },
          { "term": "Do you have…?", "translation": "Asking availability", "example": "Do you have this in blue?" },
          { "term": "That's too expensive", "translation": "Price complaint", "example": "That's too expensive. Do you have something cheaper?" }
        ]},
        { "id": "grammar-01", "type": "text", "content": "**Polite requests:**\n- *I would like* + noun\n- *Can I have* + noun + *please?*\n\n**Comparatives:**\n- cheap → *cheaper*\n- expensive → *more expensive*\n- big → *bigger*, small → *smaller*" }
      ]
    },
    {
      "phase": 2, "type": "controlled_practice", "title": "Controlled Practice",
      "blocks": [
        { "id": "ex-01", "type": "multiple_choice", "prompt": "Which is the polite way to ask for something?", "items": [
          { "text": "I would like a coffee, please.", "correct": true },
          { "text": "Give me coffee.", "correct": false },
          { "text": "Coffee now.", "correct": false }
        ]},
        { "id": "ex-02", "type": "cloze", "prompt": "How _____ is this jacket?", "items": [
          { "answer": "much", "alternatives": [] }
        ]}
      ]
    },
    {
      "phase": 3, "type": "guided_production", "title": "Guided Production",
      "blocks": [
        { "id": "guided-01", "type": "open_response", "prompt": "You are at a shop. Ask the price of two items and say you want to buy one.", "hints": ["Use 'How much is…?'", "Use 'I would like…'"], "required_grammar": ["how much", "would like"], "min_words": 12 }
      ]
    },
    {
      "phase": 4, "type": "free_performance", "title": "Free Performance Task",
      "blocks": [
        { "id": "perf-01", "type": "open_response", "prompt": "Write a dialogue between you and a shopkeeper. You want to buy a gift for a friend. Ask about options, prices, and make a decision.", "hints": [], "required_grammar": [], "min_words": 30, "evaluation_criteria": { "grammar_weight": 0.3, "vocabulary_weight": 0.3, "structure_weight": 0.2, "fluency_weight": 0.2 } }
      ]
