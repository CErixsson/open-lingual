      "blocks": [
        { "id": "ex-01", "type": "cloze", "prompt": "_____ di Roma. _____ 20 anni.", "items": [
          { "answer": "Sono", "alternatives": [] },
          { "answer": "Ho", "alternatives": [] }
        ]},
        { "id": "ex-02", "type": "multiple_choice", "prompt": "How do you say 'I like pizza' in Italian?", "items": [
          { "text": "Mi piace la pizza.", "correct": true },
